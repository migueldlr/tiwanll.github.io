body{
	text-align:center;
	font-family:arial;
}

h1{
	font-size:300%;
	font-weight:normal;
}

p{
	width:600px;
	margin-left:auto;
	margin-right:auto;
}

#mini{
	margin-bottom:10px;
}

#mini img{
	max-height:100px;
	opacity: 0.5;
    filter: alpha(opacity=50);
    margin-left:5px;
    margin-right:5px;
}

#display img{
	max-height:1000px;
}

.selected{
	opacity: 1 !important;
    filter: alpha(opacity=100) !important;
    -webkit-transition: all .25s ease;
       -moz-transition: all .25s ease;
        -ms-transition: all .25s ease;
         -o-transition: all .25s ease;
            transition: all .25s ease;
}

#footer{
	margin-top:50px;
	margin-left:auto;
	margin-right:auto;
	width:400px;
}

#footer a{
	text-decoration:none;
	color:#000000;
	-webkit-transition: all .25s ease;
       -moz-transition: all .25s ease;
        -ms-transition: all .25s ease;
         -o-transition: all .25s ease;
            transition: all .25s ease;
}

#footer a:hover{
	color:#DDDDDD;
}